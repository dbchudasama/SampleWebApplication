@model IEnumerable<SampleWebApplication.Models.Students>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<form asp-action="Save" method="post">
    @(Html
        .Grid(Model)
        .Build(columns =>
        {

            columns.Add(model => model.FirstMidName).Titled("First Name").Sortable(true);
            columns.Add(model => model.LastName).Titled("Surname");

            columns.Add(model => model.EnrollmentDate).Titled("Enrollment Date");

	        @(for int i = 0; i < model.Count(); i++)
	        {
                columns.Add(@model[i] => Html.CheckBox("Student_" + model.FirstMidName + model.LastName, model.hasGraduated)).Titled("Has Graduated");
                //columns.Add(model => Html.CheckBoxFor(model => true, model))
	        }
         
        })

        .Filterable()
        .Sortable()
        .Pageable()
       
    )

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</form>

